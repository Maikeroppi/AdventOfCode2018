<UserControl x:Class="AdventOfCode2018.Day2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AdventOfCode2018"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Label x:Name="EnterInputLabel" Content="Enter Text Input:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="23"/>
        <TextBox x:Name="InputBox" HorizontalAlignment="Left" Height="280" Margin="10,38,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="159" AcceptsReturn="True"/>
        <Button x:Name="CalculateButton" Content="Calculate" HorizontalAlignment="Left" Margin="10,323,0,0" VerticalAlignment="Top" Width="159" Click="Day2_Calculate" />
        <Label x:Name="ChecksumLabel" Content="Checksum:" HorizontalAlignment="Left" Margin="10,351,0,0" VerticalAlignment="Top" Width="88"/>
        <TextBox x:Name="ChecksumText" HorizontalAlignment="Left" Height="23" Margin="103,355,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="66" IsReadOnly="True" />
    </Grid>
</UserControl>
